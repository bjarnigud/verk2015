@model IEnumerable<SozialWeb.Models.Message>

@{
    ViewBag.Title = "Index";
}

<h2>Messages</h2>

<table class="table">
    <tr>
        <th>
           Message
        </th>
        <th>
            Date
        </th>
        <th>
            Sent From
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.timeOfMessage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.author.Name)
        </td>
        <td>
            @Html.ActionLink("Delete Message", "DeleteMessage", new { messageId = item.ID , returnurl = Request.Url.AbsoluteUri })
        </td>
    </tr>
}

</table>
